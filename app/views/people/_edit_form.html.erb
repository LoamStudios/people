<%= content_tag_for :li, person, class: "list-group-item" do %>
  <%= form_for person, remote: true, format: :js, class: "form-inline" do |f| %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <button type="submit" class="btn btn-default">Update</button>
  </form>
  <% end %>
<% end %>